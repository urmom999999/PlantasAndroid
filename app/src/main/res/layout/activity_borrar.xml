<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/testfondo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Borrar"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:paddingBottom="20dp"
        android:textAllCaps="true"
        android:textColor="#F69AC0"
        android:startColor="#345953"
        android:textSize="30dp"
        android:textStyle="bold|italic" />
    <EditText
        android:id="@+id/eliminartext"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColorHint="#ADE9E4E4"
        android:textColor="#FFFFFF"
        android:hint="Escriba el nombre del juego a eliminar"
        />
    <Button
        android:id="@+id/btnEliminar"
        android:textColor="#E9E4E4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_red"
        android:backgroundTint="#D52222"/>
    <Button
        android:id="@+id/btnAtras"
        android:textColor="#E9E4E4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AtrÃ¡s"
        android:background="@drawable/button_red"
        android:backgroundTint="#7FA90505"/>

</LinearLayout>